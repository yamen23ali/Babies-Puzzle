<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dip" />
            <stroke  
                android:width="2dp" 
                android:color="#CD950C" />
            
            <gradient android:angle="-90" android:endColor="#60000000" android:startColor="#99CD950C" />
        </shape>        
    </item>
    
    <item>
        
        <shape android:shape="rectangle">
            <corners android:radius="5dip" />
            <stroke  
                android:width="2dp" 
                android:color="#CD950C" />
            <gradient android:angle="-90" android:endColor="#40000000" android:startColor="#70A2B5CD" />
        </shape>
        
     </item>

</selector>